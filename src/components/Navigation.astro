    <ul class="side-nav-list-items">
      {
        links.map((item) => (
          <li class="side-nav-item">
            <a class="btn" href={item.href}>
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>
<style>
  .navigation {
    width: 100%;
    display: block;
    position: sticky;
    z-index: 10;
    top: 0;
    left: 0;
    bottom: 0;
    color: var(--text);
    margin: 0;
    padding: var(--spacing);
  }

  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--mw-container);
    margin: auto;
    padding: var(--spacing);
    border: 2px solid #e7e7e765;
    border-radius: var(--radius-lg);
    background-color: var(--paper);
    /* box-shadow: #5b5a5a3b 2px 4px 4px 2px; */
  }

  @media (width > 768px) {
    .nav-bar {
      padding: var(--spacing) var(--spacing-xl);
    }
  }
  .nav-bar .logo svg {
    display: block;
    height: 20px;
    width: fit-content;
  }

  @media (width > 768px) {
    .nav-bar .logo svg {
      height: 30px;
    }
  }

  .nav-list-items {
    flex-grow: 1;
    display: none;
    list-style: none;
    gap: var(--spacing);
    margin: 0;
    justify-content: right;
  }

  @media (width > 768px) {
    .nav-list-items {
      display: flex;
    }
  }

  .nav-item a {
    font-weight: 500;
    color: #0e0e0e;
    text-decoration: none;
    position: relative;
    padding: var(--spacing-xs) var(--spacing);
  }

  .nav-item a::before {
    content: " ";
    position: absolute;
    bottom: 0px;
    left: 0;
    height: 2px;
    width: 100%;
    transform: scaleX(1);
    transform-origin: left;
    transition: transform var(--transition-regular);
  }
  .nav-item a.active::before {
    transform: scaleX(1);
  }

  .nav-item a:hover::before {
    transform: scaleX(1.025);
  }

  /* icono hamburguesa */

  .hamburguer {
    display: block;
    position: relative;
    background-color: var(--paper);
    padding: var(--spacing-xs);
    border-radius: var(--radius-lg);
  }

  @media (width > 768px) {
    .hamburguer {
      display: none;
    }
  }

  .hamburguer span {
    width: 20px;
    height: 4px;
    border-radius: var(--radius-xs);
    background-color: var(--text);
    display: block;
    transition: all var(--transition-regular);
  }
  .hamburguer span:nth-child(1) {
    transform: translate(0px, -4px);
  }
  .hamburguer span:nth-child(2) {
    transform: translate(0px, 0px);
  }
  .hamburguer span {
    transform: translate(0px, 4px);
  }

  .hamburguer.open span:nth-child(1) {
    transform: rotate(50deg) scale(1.2) translate(4px, 2px);
  }
  .hamburguer.open span:nth-child(2) {
    transform: rotate(311deg) scale(1.2) translate(0px, 1px);
  }
  .hamburguer.open span:nth-child(3) {
    opacity: 0;
  }

  .side-menu {
    display: none;
    height: calc(100dvh - 85px);
    width: 100dvw;
    padding: var(--spacing);

    position: fixed;
    bottom: 0px;
    right: 0px;

    transition: all var(--transition-regular);
    transform: scale(0);
    opacity: 0;
  }

  .side-menu nav.side-nav-bar {
    padding: var(--spacing-xs);
    height: 100%;
    border: 2px solid #e7e7e765;
    border-radius: var(--radius-lg);
    background-color: var(--paper);
  }
  .side-menu nav.side-nav-bar .logo {
    padding: var(--spacing-xs);
    width: 100%;
    align-content: center;
    text-align: center;
    margin-bottom: var(--spacing);
  }

  .side-menu nav.side-nav-bar .side-nav-list-items {
    list-style: none;
    margin: 0px;
    padding: var(--spacing-xxs) var(--spacing);
  }

  .side-menu nav.side-nav-bar .side-nav-list-items li a {
    display: block;
    padding: var(--spacing);
    margin-bottom: var(--spacing);

    text-align: center;
    color: var(--text);
    font-weight: 800;
    text-decoration: none;
    transition: all var(--transition-regular);

    border-radius: var(--radius-lg);
  }
</style>
